<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FixNeat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_dark_blue</item>
        <item name="colorPrimaryVariant">@color/my_dark_blue</item>
        <item name="colorOnPrimary">@color/my_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/my_gray</item>
        <item name="colorSecondaryVariant">@color/my_gray</item>
        <item name="colorOnSecondary">@color/my_orange</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/my_blue</item>
    </style>

    <style name="Theme.FixNeat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FixNeat.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FixNeat.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>