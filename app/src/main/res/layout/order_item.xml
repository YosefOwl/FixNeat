<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Theme.FixNeat"
    app:cardCornerRadius="12dp"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        style="@style/Theme.FixNeat">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/order_call_TV"
            android:paddingStart="15dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/order_item_client_name_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:minLines="1"
                android:textSize="16sp"
                android:text="Client Name"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/order_item_status_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:maxLines="1"
                android:minLines="1"
                android:textSize="16sp"
                android:text="Order Status"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/order_item_date_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:maxLines="1"
                android:minLines="1"
                android:textSize="16sp"
                android:text="Next Visit" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/order_item_note_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:maxLines="1"
                android:minLines="1"
                android:textSize="16sp"
                android:text="Note"/>

        </LinearLayout>

        <TextView
            android:id="@+id/order_call_TV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_call"
            android:clickable="true"
            android:cursorVisible="true"
            android:text="" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>