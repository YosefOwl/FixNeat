<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Viwes.ui.orders.DisplayOrderFragment">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Viwes.MenuActivity">

        <LinearLayout
            android:id="@+id/order_ll_status"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:elevation="@dimen/cardview_default_radius"
            android:layout_alignParentEnd="true" >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/order_IMG_status1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_menu_camera" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/order_IMG_status2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_menu_camera" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/order_IMG_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_menu_camera" />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/od_tv_firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_ll_status"
            android:layout_margin="20dp"
            android:text="fname"
            android:textSize="30sp"
            android:maxLines="1"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/od_tv_lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/od_tv_firstName"
            android:layout_margin="20dp"
            android:text="lname"
            android:textSize="30sp"
            android:maxLines="1"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/od_tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/od_tv_lastName"
            android:layout_margin="20dp"
            android:text="phone"
            android:textSize="30sp"
            android:maxLines="1"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/od_tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/od_tv_phone"
            android:layout_margin="20dp"
            android:text="email"
            android:textSize="30sp"
            android:maxLines="1"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/od_tv_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/od_tv_email"
            android:layout_margin="20dp"
            android:text="city"
            android:textSize="30sp"
            android:maxLines="1"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/od_tv_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/od_tv_city"
            android:layout_margin="20dp"
            android:text="street"
            android:textSize="30sp"
            android:maxLines="1"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/od_tv_houseNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/od_tv_street"
            android:layout_margin="20dp"
            android:text="house number"
            android:textSize="30sp"
            android:maxLines="1"
            />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/od_tv_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/od_tv_street"
            android:layout_margin="20dp"
            android:text="test"
            android:textSize="30sp"
            android:maxLines="1"
            />
    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/order_BTN_status"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:text="Next Status"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/order_BTN_back"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="20dp"
        android:text="Back"/>

</FrameLayout>